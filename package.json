{
  "name": "react-express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "seed": "node scripts/seedClientDB.js && node scripts/seedProductsDB.js && node scripts/seedSupplierDB.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "faker": "^4.1.0",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "bcrypt": "^3.0.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mdbreact": "^4.11.0",
    "mongoose": "^5.4.16",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  }
}
